<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <!-- Heading Row for Column Names -->


    <!-- Data Rows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4">

        <!-- First TextView: Product Type -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Product Type"
            android:textColor="#090B01"
            android:textSize="12sp" />

        <!-- Second TextView: Quantity -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Quantity"
            android:textColor="#090B01"
            android:textSize="12sp" />

        <!-- Third TextView: Additional Info (e.g., Price or Description) -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Additional Info"
            android:textColor="#090B01"
            android:textSize="12sp" />

        <!-- Fourth TextView: Additional Info -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Additional Info"
            android:textColor="#090B01"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4">

        <!-- First TextView: Product Type -->
        <EditText
            android:id="@+id/edit_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Product Type"
            android:textColor="#090B01"
            android:textSize="12sp"
            android:visibility="gone"/>

        <!-- Second TextView: Quantity -->
        <EditText
            android:id="@+id/edit_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Quantity"
            android:textColor="#090B01"
            android:textSize="12sp"
            android:visibility="gone"/>

        <!-- Third TextView: Additional Info (e.g., Price or Description) -->
        <EditText
            android:id="@+id/edit_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Additional Info"
            android:textColor="#090B01"
            android:textSize="12sp"
            android:visibility="gone"/>

        <!-- Fourth TextView: Additional Info -->
        <EditText
            android:id="@+id/edit_t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CCA2A2"
            android:fontFamily="sans-serif-black"
            android:padding="8dp"
            android:text="Additional Info"
            android:textColor="#090B01"
            android:textSize="12sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
